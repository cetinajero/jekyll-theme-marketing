<footer id="footer" data-component="footers/progressive">

  <div class="footer-top pt-4"> <!-- start footer-top -->
    <div id="vg-footer">
      <div class="container">
        <div class="row sidebar">
          {% include components/footers/progressive/top.liquid %}
        </div>
      </div>
    </div>
  </div> <!-- end footer-top -->

  <div class="footer-bottom"> <!-- start footer-bottom -->
    <div class="container">
      <div class="row">
        {% include components/copyrights/progressive.liquid %}

        {% if site.social-media %}
          <aside class="col-md-3 ml-auto">
            {% include components/social-media/progressive.liquid %}
          </aside>
        {% elsif site.original == false %}
          <div class="col-md-5 text-center">
            {% include components/contact-cards/phone-card.liquid %}
          </div>
        {% endif %}

        <div class="col-md-1">
          {% include components/scroll-to-tops/progressive.html %}
          {% include components/lang-switchers/two-langs.html %}
        </div>

      </div>
    </div>
  </div> <!-- end footer-bottom -->

</footer>
